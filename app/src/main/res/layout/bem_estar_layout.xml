<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BemEstarActivity">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tblBemEstar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tbItemMeditacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meditação" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tbItemMusicas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Músicas" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tbItemZazen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zazen" />


    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vpgBemEstar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tblBemEstar" />

</RelativeLayout>